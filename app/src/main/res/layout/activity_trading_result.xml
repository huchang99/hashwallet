<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TradingResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sucessfailedshape"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/resultStatus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/sucess"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tradingtv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易记录"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:layout_above="@id/resultStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/TradingBackbt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"
            android:layout_alignTop="@id/tradingtv1"/>
        <TextView
            android:id="@+id/tradingValue"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="0.00"
            android:layout_below="@id/resultStatus"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tradingFlagAddorMin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/tradingValue"
            android:layout_alignTop="@id/tradingValue"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="+"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/tradingValueflag"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@id/tradingValue"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="eeeeee"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tradingValue"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="发款方"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0x23333333333333333333333333333"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="收款方"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0x23333333333333333333333333333"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="矿工费用"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0x23333333333333333333333333333"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="备注"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="3号技师技术不错"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:paddingLeft="25dp"/>
    </LinearLayout>
    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="交易号"
            android:paddingLeft="25dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0xnisnis...xxxxxx"
            android:paddingLeft="25dp"
            android:textColor="#349DF5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="区块"
            android:paddingLeft="25dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0xnisnis...xxxxxx"
            android:paddingLeft="25dp"
            android:textColor="#349DF5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="交易时间"
            android:paddingLeft="25dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0xnisnis...xxxxxx"
            android:textColor="#349DF5"
            android:paddingLeft="25dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>